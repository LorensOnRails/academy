<!-- Fixed navbar (Start) -->
<div class="d-flex sticky-top flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
  <%= image_tag('', height: 35, class: 'my-0 mr-md-auto', alt: "Academy") %>
  <nav class="my-2 my-md-0 mr-md-3">
    <a class="p-2 text-dark" href="#">Academy for Business</a>
    <a class="p-2 text-dark" href="#">Become an Instructor</a>
  </nav>
  <nav class="my-2 my-md-0 mr-md-3">
	  <% if account_signed_in? %>
	   <div class="dropdown">
	    <a class="btn btn-white dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
	     <%= current_account.first_name %>
	    </a>
	    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
	     <%= link_to "Settings", edit_account_registration_path, class: 'dropdown-item' %>
	     <div class="dropdown-divider"></div>
	     <%= link_to destroy_account_session_url, :method => :delete, class: "dropdown-item" do %>Sign out<% end %>
	    </div>
	   </div>
	  <% else %>
	   <%= link_to 'Log In', new_account_session_path, class: 'btn btn-outline-primary' %>
	   <%= link_to 'Sign Up', new_account_registration_path, class: 'btn btn-primary' %>
	  <% end %>
  </nav>
</div>
<!-- Fixed navbar (End) -->